{
  "name": "cjncitation",
  "version": "1.0.0",
  "description": "An Electron application with Next.js and backend server.",
  "main": "main.cjs",
  "scripts": {
    "dev": "set NODE_OPTIONS=--openssl-legacy-provider && next dev",
    "build": "set NODE_OPTIONS=--openssl-legacy-provider && next build",
    "start": "start start-all.bat",
    "type-check": "tsc --noEmit",
    "backend": "node backend/server.js",
    "electron": "electron .",
    "electron-dev": "start start-all.bat",
    "dist": "electron-builder",
    "post": "powershell -ExecutionPolicy Bypass -File ./run_as_admin.ps1",
    "export": "next export"
  },
  "dependencies": {
    "@azure/msal-node": "^2.16.2",
    "ag-grid-community": "^32.3.2",
    "ag-grid-react": "^32.3.2",
    "antd": "^5.21.6",
    "concurrently": "^6.5.1",
    "electron-log": "^5.2.3",
    "electron-updater": "^6.3.9",
    "express": "^4.17.1",
    "formik": "^2.4.6",
    "jspdf": "^2.5.2",
    "keytar": "^7.9.0",
    "next": "^14.2.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-mask": "^1.1.18",
    "styled-components": "^6.1.13",
    "sudo-prompt": "^9.2.1",
    "winreg": "^1.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "electron": "^33.3.0",
    "electron-builder": "^23.6.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "com.yourcompany.cjncitation",
    "productName": "CjnCitation",
    "publish": [
      {
        "provider": "github",
        "owner": "swapnilMishra92121",
        "repo": "cjnrmsDestop"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.cjs",
      "preload.js",
      "backend/**",
      "pages/**",
      "node_modules/**",
      "CJNCitationService/**",
      "Vehicle/**",
      "package.json",
      "litedb_demo3.exe",
      "out/**",
      "run_as_admin.ps1",
      "start-all.bat"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "icon": "icons/favicon",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "icons/favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "icons/favicon.icns"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "icons/favicon.png"
    }
  }
}
